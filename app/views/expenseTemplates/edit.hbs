<h3>Expense {{ expense.name }}</h3>

<form method="POST">
    <div class="d-flex flex-column-reverse">
        <div>
            <div class="d-flex flex-row">
                <button type="submit" name="command" value="edit" class="btn btn-sm btn-primary">
                    {{{ markdown @root.translation.expenseTemplates.edit.updateButtonLabel }}}
                </button>
                <a href="/expense-templates" class="ms-2 btn btn-sm btn-secondary">
                    {{{ markdown @root.translation.expenseTemplates.edit.cancelButtonLabel }}}
                </a>
            </div>
        </div>
        <div>
            <input type="hidden" id="etag" name="etag" value="{{ form.etag }}">

            {{> expenseTemplates/form }}
        </div>
    </div>
</form>
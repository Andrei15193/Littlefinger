<div class="d-flex flex-row align-items-center">
    <h3>{{{ markdown translation.expenses.list.pageTitle }}}</h3>
    <a href="/expenses{{#if route.month}}/{{ route.month }}{{/if}}/add" class="ms-2 btn btn-sm btn-primary">{{{ markdown translation.expenses.list.addButtonLabel }}}</a>
    <nav class="ms-auto">
        <ul class="pagination pagination-sm align-items-center">
            <li class="page-item me-3">
                {{#ifCompare pagination.currentDateMonth '===' pagination.currentMonth }}
                <small class="text-decoration-underline">{{ @root.translation.expenses.list.currentMonthLabel }}</small>
                {{else}}
                <small><a href="/expenses/{{ pagination.currentDateMonth }}">{{ @root.translation.expenses.list.currentMonthLabel }}</a></small>
                {{/ifCompare}}
            </li>
            <li class="page-item">
                <a class="page-link" href="/expenses/{{ pagination.nextMonth }}">
                    <span aria-hidden="true">&laquo;</span>
                    {{ pagination.nextMonth }}
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="/expenses/{{ pagination.currentMonth }}">
                    {{ pagination.currentMonth }}
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="/expenses/{{ pagination.previousMonth }}">
                    {{ pagination.previousMonth }}
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>

<table class="table table-sticky table-hover">
    <thead>
        <tr>
            <th>
                <div>{{{ markdown translation.expenses.list.columns.name }}}</div>
            </th>
            <th>
                <div>{{{ markdown translation.expenses.list.columns.shop }}}</div>
            </th>
            <th>
                <div>{{{ markdown translation.expenses.list.columns.tags }}}</div>
            </th>
            <th>
                <div>{{{ markdown translation.expenses.list.columns.price }}}</div>
            </th>
            <th>
                <div>{{{ markdown translation.expenses.list.columns.quantity }}}</div>
            </th>
            <th>
                <div>{{{ markdown translation.expenses.list.columns.amount }}}</div>
            </th>
            <th>
                <div>{{{ markdown translation.expenses.list.columns.date }}}</div>
            </th>
        </tr>
    </thead>
    <tbody>
        {{#each expenses}}
        <tr{{#unlessOdd @index}} class="table-light" {{/unlessOdd}}>
            <td>
                {{#if this.warning}}
                <a href="/expenses/{{ key.month }}/{{ key.id }}" class="link-warning" title="{{ expenseWarning @root.translation this.warning }}">
                    {{> icons/exclamation-round-icon height='1.1rem' }}
                    {{ name }}
                </a>
                {{else}}
                    {{#ifCompare this.state '===' 'changingMonth'}}
                    <a href="/expenses/{{ key.month }}/{{ key.id }}" class="link-info" title="{{ @root.translation.expenses.states.changingMonth }}">
                        <div class="spinner-grow spinner-grow-sm"></div>
                        {{ name }}
                    </a>
                    {{else}}
                    <a href="/expenses/{{ key.month }}/{{ key.id }}">
                        {{ name }}
                    </a>
                    {{/ifCompare}}
                {{/if}}
            </td>
            <td>{{ shop }}</td>
            <td>
                {{#each tags}}
                <div class="tag {{ expenseTagColorClass this.color }} badge rounded-pill">{{ this.name }}</div>
                {{/each}}
            </td>
            <td>
                {{ currency }}<span class="ms-2 invisible">{{ getLeadingZeros @root.translation.locale amount @root.format.integerDigitsCount.price }}</span>{{ formatNumber @root.translation.locale price }}
            </td>
            <td><span class="invisible">{{ getLeadingZeros @root.translation.locale quantity @root.format.integerDigitsCount.quantity }}</span>{{ formatIntegerNumber @root.translation.locale quantity }}</td>
            <td>
                {{ currency }}<span class="ms-2 invisible">{{ getLeadingZeros @root.translation.locale amount @root.format.integerDigitsCount.amount }}</span>{{ formatNumber @root.translation.locale amount }}
            </td>
            <td>{{ formatDate @root.translation.locale date }}</td>
        </tr>
        {{/each}}
    </tbody>
    {{#each expenses}}
        {{#if @first}}
        <tfoot>
            <tr>
                <td>
                    <div>{{{ markdown @root.translation.expenses.list.totalsRow.total }}}</div>
                </td>
                <td>
                    <div><span class="invisible">&nbsp;</span></div>
                </td>
                <td>
                    <div><span class="invisible">&nbsp;</span></div>
                </td>
                <td>
                    <div><span class="invisible">&nbsp;</span></div>
                </td>
                <td>
                    <div><span class="invisible">&nbsp;</span></div>
                </td>
                <td>
                    <div>
                        {{#each @root.totals}}
                        <div>
                            {{ currency }}<span class="ms-2 invisible">{{ getLeadingZeros @root.translation.locale amount @root.format.integerDigitsCount.amount }}</span>{{ formatNumber @root.translation.locale amount }}
                        </div>
                        {{/each}}
                    </div>
                </td>
                <td>
                    <div><span class="invisible">&nbsp;</span></div>
                </td>
            </tr>
        </tfoot>
        {{/if}}
    {{/each}}
</table>

{{#each expenses}}
{{else}}
<div class="p-2 alert alert-secondary text-center" role="alert">{{{ markdown @root.translation.expenses.list.empty }}}</div>
{{/each}}
<h3>{{{ markdown @root.translation.expenses.copy.pageTitle }}}</h3>

<form method="POST">
    <div class="d-flex flex-column-reverse">
        <div>
            <div class="d-flex flex-row">
                <button type="submit" name="command" value="copy" class="btn btn-sm btn-primary">
                    {{{ markdown @root.translation.expenses.copy.copyButtonLabel }}}
                </button>
                <a href="/expenses/{{ route.month }}/{{ route.id }}" class="ms-2 btn btn-sm btn-secondary">
                    {{{ markdown @root.translation.expenses.copy.cancelButtonLabel }}}
                </a>
            </div>
        </div>
        <div>
            {{> expenses/form expenseId=route.id state=state warning=warning }}
        </div>
    </div>
</form>